<% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>



<%= form_for @user, url: '/login', method: :post do |f| %>

<%=f.label :name%>
<%=f.text_field :name %><br>

<%=f.label :password%>
<%=f.password_field :password%><br>

<%=f.submit "Submit"%>
Or <%= link_to('users/new') { 'sign up' } %>

<%end%>